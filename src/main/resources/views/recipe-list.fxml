<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.cell.*?>

<VBox xmlns="http://javafx.com/javafx/17.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.myapp.controllers.RecipeListController"
    fx:id="root" styleClass="recipe-list-container" spacing="10">
    
    <!-- Header -->
    <HBox styleClass="header">
        <Label text="Recipe Manager" styleClass="title-label"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="Add Recipe" onAction="#handleAddRecipe" styleClass="add-button"/>
        <Button text="Logout" onAction="#handleLogout"/>
    </HBox>
    
    <!-- Search and Filter Bar -->
    <HBox spacing="10" styleClass="search-filter-bar">
        <TextField fx:id="searchField" promptText="Search recipes..." HBox.hgrow="ALWAYS" onAction="#handleSearch"/>
        <ComboBox fx:id="categoryFilter" promptText="Filter by category" prefWidth="200"/>
        <Button text="Search" onAction="#handleSearch"/>
    </HBox>
    
    <!-- Recipe Table -->
    <TableView fx:id="recipeTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="titleColumn" text="Title" prefWidth="200"/>
            <TableColumn fx:id="categoryColumn" text="Category" prefWidth="120"/>
            <TableColumn fx:id="prepTimeColumn" text="Prep (min)" prefWidth="80"/>
            <TableColumn fx:id="cookTimeColumn" text="Cook (min)" prefWidth="80"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>
    
    <!-- Action Buttons -->
    <HBox spacing="10" styleClass="button-bar">
        <Button fx:id="viewButton" text="View Details" onAction="#handleViewRecipe" disable="true"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button fx:id="closeButton" text="Close" onAction="#handleClose"/>
    </HBox>
    
    <stylesheets>
        @../styles/styles.css
    </stylesheets>
    
</VBox>
